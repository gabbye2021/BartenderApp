@model IEnumerable<BartenderApp.Models.Order>

@{
    ViewData["Title"] = "Order Queue";
}
<head>
    <link rel="stylesheet" href="../css/site.css" />
</head>
<h1>Order Queue</h1>


<table class="table">
    <thead>
        @foreach (var item in Model)
        {
            @foreach (var val in item.drinkList)
            {
                <tr>
                    <th>
                        @Html.DisplayNameFor(modelItem => item.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelItem => item.LastName)
                    </th>
                    <th>
                        Drink
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelItem => item.total)
                    </th>
                </tr>
            }
        }
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @foreach (var val in item.drinkList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @val.drinkName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                    <td>
                        @Html.ActionLink("Complete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
